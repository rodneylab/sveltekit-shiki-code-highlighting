{
  "name": "sveltekit-shiki-code-highlighting",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "SvelteKit Shiki syntax highlighting: use any VSCode colour theme to accessibly syntax highlight code on your SvelteKit app with line numbers.",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "package": "svelte-kit package",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
    "test": "playwright test",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "prettier:check": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --ignore-path .prettierignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@fontsource/ibm-plex-mono": "^4.5.13",
    "@playwright/test": "^1.32.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.15.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "mdsvex": "^0.10.6",
    "node-html-parser": "^6.1.5",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.7",
    "prettier-plugin-svelte": "^2.10.0",
    "shiki": "^0.14.1",
    "stylelint": "^15.4.0",
    "stylelint-config-recommended": "^11.0.0",
    "stylelint-config-standard": "^32.0.0",
    "svelte": "^3.58.0",
    "svelte-check": "^3.1.4",
    "svelte-preprocess": "^5.0.3",
    "typescript": "~5.0.3",
    "vite": "^4.2.1"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rodneylab/sveltekit-shiki-code-highlighting"
  },
  "bugs": {
    "url": "https://github.com/rodneylab/sveltekit-shiki-code-highlighting/issues"
  },
  "peerDependencies": {
    "vite": "^3.0.4"
  }
}
